      <script>
        <!-- https://www.w3schools.com/howto/howto_js_collapsible.asp -->
        var coll = document.getElementsByClassName("collapsible");
        var i;
        
        for (i = 0; i < coll.length; i++) {
          coll[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
              content.style.display = "none";
            } else {
              content.style.display = "block";
            }
          });
        }
        </script>
        <script>
          document.addEventListener('DOMContentLoaded', (event) => {
            const container = document.querySelector('#students .row');
            let columns = Array.from(container.children);
            
            for (let i = columns.length - 1; i > 0; i--) {
              const j = Math.floor(Math.random() * (i + 1));
              [columns[i], columns[j]] = [columns[j], columns[i]]; // Swap elements
            }
            
            // Append columns back in their new order
            columns.forEach(column => container.appendChild(column));
          });
          </script>

